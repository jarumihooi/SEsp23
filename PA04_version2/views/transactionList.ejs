
<div>

  <h1> Transaction App for <%= user.username %> </h1>

<ul class="list-group">
  <p> Here is your transactions list! </p>
  <table class="table-bordered" bdcolor="#F0F0F0">
    <thead>
      <tr>
        <th scope="row" style="text-align: center"><a class="btn btn-lg btn-primary" href="/transaction/groupBy">group by category</a></th>
        <td style="text-align: center"><a class="btn btn-lg btn-primary" href="?sortBy=category">sort by category</a></td>
        <td style="text-align: center"><a class="btn btn-lg btn-primary" href="?sortBy=amount">sort by amount</a></td>
        <td style="text-align: center"><a class="btn btn-lg btn-primary" href="?sortBy=description">sort by description</a></td>
        <td style="text-align: center"><a class="btn btn-lg btn-primary" href="?sortBy=date">sort by date</a></td>
        <!-- amount is stored in sortBy/ call in api -->


      </tr>
    </thead>
    <th scope="row">
  


  </table>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">description</th>
        <th scope="col">amount</th>
        <th scope="col">category</th>
        <th scope="col">date</th>
        <th scope="col">delete</th>
        <th scope="col">edit</th>


      </tr>
    </thead>
  <% var num = 1%>
  <% var c = ""%>
  <% items.forEach(item => { %>
    <tbody>
      <% if (num%2 ==1) {c="#F0F0F0"} else {c="#FFFFFF"} %>

      <tr bgcolor= <%=c %>>
        <th scope="row"> <%= item.description %></th>
        <td><%= item.amount %></td>
        <td><%= item.category %></td>
        <td><%= item.date %></td>
        <!-- <a href="/todo/remove/<%=item._id %>"> -->
          <td><a href="/transaction/remove/<%=item._id %>">
                <i class="bi bi-trash"></i></a>
              </td>

          <td><a href="/transaction/transactionEdit/<%=item._id %>">
            <i class="bi bi-pencil-square"></i></a>
          </td>
        </tr>
        <% num++ %>



        
    </tbody>
  
     
    
      <% }) %>




     

        
      </table>

