<h1> GPT App for <%= user.username %> </h1>
<div class="row">
  <div class="col">
    <p> GPT Description! </p>
  </div>
</div>
<form method="post" action="gpt">
  new resume: <input type="text" name="resume">
  <br>
  new person_desc: <input type="text" name="person_desc">
  <br>
  new jobpost: <input type="text" name="jobpost">
  <br>
  <input type="submit" value="store">
</form>

<h2>Items</h2>
<ul>
  <% items.forEach(function(item) { %>
    <li>
      <strong>Resume:</strong> <%= item.resume %><br>
      <strong>Person Description:</strong> <%= item.person_desc %><br>
      <strong>Job Post:</strong> <%= item.jobpost %><br>
      <strong>Response:</strong> <%= item.response %><br>
      <strong>Remade_Resume:</strong> <%= item.remade_resume %><br>
      <strong>User:</strong> <%= item.userId.username %>
    </li>
  <% }) %>
</ul>

<h2>GPT Items</h2>
<table>
  <thead>
    <tr>
      <th>Resume</th>
      <th>Person Desc</th>
      <th>Job Post</th>
      <th>Response</th>
      <th>Remade Resume</th>
    </tr>
  </thead>
  <tbody>
    <% gpt_items.forEach(item => { %>
      <tr>
        <td><%= item.resume %></td>
        <td><%= item.person_desc %></td>
        <td><%= item.jobpost %></td>
        <td><%= item.response %></td>
        <td><%= item.remade_resume %></td>
      </tr>
    <% }) %>
  </tbody>
</table>


<h2>Delete Item</h2>
<form method="post" action="/gpt/delete">
  person_desc to delete: <input type="text" name="person_desc">
  <br>
  <input type="submit" value="Delete">
</form>
